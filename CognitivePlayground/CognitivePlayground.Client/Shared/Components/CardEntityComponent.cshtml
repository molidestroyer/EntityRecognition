@inherits CardEntityComponentModel

<div class="wrimagecard wrimagecard-topimage card">
    <a href="@EntityRecord.WikipediaUrl" >
        <div class="wrimagecard-topimage_header" style="background-color:@Color ">
            @if (!string.IsNullOrEmpty(EntityRecord.WikipediaImageUrl))
            {
                <center><img class="img-thumbnail" style="max-height: 200px;" href="@EntityRecord.WikipediaUrl" src="@EntityRecord.WikipediaImageUrl"/></center>
            }
            else
            {
                <center><i class="@Icon" style="color:@IconColor"></i></center>
            }
            
            <center class="mt-2"><h6 style="color:@IconColor">@EntityRecord.Type</h6></center>
            <center><h6 style="color:@IconColor">@EntityRecord.SubType</h6></center>
        </div>
        <div class="wrimagecard-topimage_title">
            <h6>
                @EntityRecord.Name
            </h6>
        </div>
    </a>
</div>
