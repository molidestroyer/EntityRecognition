@page "/textanalytics"
@inherits TextAnalyticsModel
@*<p>Current count: @currentCount</p>*@

<div class="form-group">
    <div class="row">
        <h1>Enter your not intelligent text to extract all the info</h1>
        <SurveyPrompt Title="Tip! Enter a text on any language and it will be detected and all entities will be analysed by MS Cognitive services" />
        <textarea bind="@_text" class="form-control" rows="5"></textarea>
        <button class="btn btn-primary mt-2" onclick="@GetEntityLinkingResult">Get text analytics results</button>
        @if (_loading)
        {
            <div class="container">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                        <span>Please wait<span class="dotdotdot"></span></span>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-5" hidden="@(!_dataLoaded)">
        @if (_resultEntities.DetectedLanguage != null)
        {
            <div class="col-12 alert alert-info mt-4" role="alert" sy>
                Detected language <strong>@_resultEntities.DetectedLanguage.Name</strong> with probability of <strong>@((string.Format("{0:P2}.", _resultEntities.DetectedLanguage.Score.Value))) </strong>
            </div>
        }

        <div class="col-12 mt-5">
            @{ if (_resultEntities.SentimentBatchResult.Documents != null)
                {
                    <h3 class="jumbotron-heading text-center">SENTIMENT SCORE</h3>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: @((_resultEntities.SentimentBatchResult.Documents[0]?.Score * 100))%;" aria-valuenow="@((_resultEntities.SentimentBatchResult.Documents[0]?.Score))" aria-valuemin="0" aria-valuemax="1">@((string.Format("{0:P2}.", _resultEntities.SentimentBatchResult.Documents[0]?.Score)))</div>
                    </div>
                }
            }
        </div>

        @{ if (_resultEntities.KeyPhraseBatchResult != null)
            {
                if (_resultEntities.KeyPhraseBatchResult.Documents != null)
                {
                    if (_resultEntities.KeyPhraseBatchResult.Documents[0].KeyPhrases.Any())
                    {
                        <section class="col-12 text-center mt-5">
                            <div class="container">
                                <h3 class="jumbotron-heading">KEY PHRASES</h3>
                                <div id="cloud" style="width: 100%;"></div>
                            </div>
                        </section>
                    }
                }
            }
        }

        <div class="col-12 card-columns">
            @foreach (var result in _resultEntities.EntityRecords)
            {
                <CardEntityComponent EntityRecord="@result"></CardEntityComponent>
            }


        </div>

    </div>

    <div class="row mt-2">
        <h6> Sources Obama speech : <a href="https://www.americanrhetoric.com/speeches/barackobama/barackobamasenatespeechoncorettascottkingpassing.htm">www.americanrhetoric.com</a> </h6>
    </div>
</div>


